  <script>
    const saved = JSON.parse(localStorage.getItem('articles')) || [];
    const defaultArticles = [
      {
        title: "Pourquoi la politique nous concerne tous",
        date: "19 juin 2025",
        content: "Beaucoup pensent que la politique ne les touche pas. Pourtant, chaque d√©cision, chaque r√©forme, chaque vote a un impact sur notre quotidien. Ce blog a pour but de d√©crypter, informer et surtout ouvrir le d√©bat."
      },
      {
        title: "Comprendre les institutions fran√ßaises",
        date: "20 juin 2025",
        content: "Le fonctionnement des institutions fran√ßaises peut para√Ætre complexe. Assembl√©e nationale, S√©nat, Conseil constitutionnel... Qui fait quoi, comment, et pourquoi cela nous concerne-t-il ? Ce guide te donnera les bases pour mieux suivre l‚Äôactualit√© politique."
      },
      {
        title: "√âlections municipales : enjeux locaux, impacts nationaux",
        date: "21 juin 2025",
        content: "Trop souvent ignor√©es, les √©lections municipales sont pourtant essentielles : elles touchent directement √† notre quotidien. Transport, logement, environnement local... Plongeons dans les enjeux cruciaux de ce scrutin."
      }
    ];

    const articles = saved.length ? saved : defaultArticles;
    let currentPage = 1;
    const articlesPerPage = 1;

    function renderArticles() {
      const start = (currentPage - 1) * articlesPerPage;
      const end = start + articlesPerPage;
      const visibleArticles = articles.slice(start, end);
      const container = document.getElementById("article-list");
      container.innerHTML = visibleArticles.map(article => `
        <article>
          <h2>${article.title}</h2>
          <p><em>Publi√© le ${article.date}</em></p>
          <p>${article.content}</p>
        </article>
      `).join("");

      const pageInfo = document.getElementById("page-info");
      const totalPages = Math.ceil(articles.length / articlesPerPage);
      pageInfo.textContent = `Page ${currentPage} sur ${totalPages}`;
    }

    function changePage(direction) {
      const totalPages = Math.ceil(articles.length / articlesPerPage);
      currentPage += direction;
      if (currentPage < 1) currentPage = 1;
      if (currentPage > totalPages) currentPage = totalPages;
      renderArticles();
    }

    function addArticle() {
      const title = document.getElementById("newTitle").value.trim();
      const date = document.getElementById("newDate").value.trim();
      const content = document.getElementById("newContent").value.trim();
      if (title && date && content) {
        articles.unshift({ title, date, content });
        localStorage.setItem("articles", JSON.stringify(articles));
        currentPage = 1;
        renderArticles();
        document.getElementById("newTitle").value = "";
        document.getElementById("newDate").value = "";
        document.getElementById("newContent").value = "";
      }
    }

    function clearArticles() {
      localStorage.removeItem("articles");
      location.reload();
    }

    renderArticles();
  </script>
